{
  "name": "acme/widgets",
  "description": "Acme Widget Co - Basket proof of concept",
  "type": "project",
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Acme\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Acme\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "fix": "php-cs-fixer fix -v --using-cache=no || true"
  }
}
